extends layout

block content
    div#body_container
        h2 Add Drafting Team
        form
            div#team_name_input
                label.team_label Team Name: &nbsp;
                    input(name='team_name')
                - var i = 0
                while i < 6
                    - i++
                        div(id= 'member_input_' + i)
                            label.team_label Member #{i}: &nbsp;
                                input(name='member_name_#{i}')
